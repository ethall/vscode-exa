{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/ethall/vscode-exa/exa.docs.schema.json",
  "type": "object",
  "title": "EXA Documentation Strings",
  "description": "Documentation strings for the EXA programming language from Zachtronics' EXAPUNKS.",
  "readOnly": true,
  "writeOnly": false,
  "required": ["documentation"],
  "definitions": {
    "description": {
      "$id": "#/definitions/description",
      "description": "The Markdown content to display for this language element.",
      "readOnly": true,
      "writeOnly": false,
      "oneOf": [
        {
          "type": "string"
        },
        {
          "type": "array",
          "items": {
            "type": "string",
            "readOnly": true,
            "writeOnly": false
          }
        }
      ]
    }
  },
  "properties": {
    "documentation": {
      "type": "array",
      "readOnly": true,
      "writeOnly": false,
      "items": {
        "type": "object",
        "readOnly": true,
        "writeOnly": false,
        "required": ["name", "description"],
        "properties": {
          "name": {
            "type": "string",
            "description": "Case-insensitive instruction or register.",
            "readOnly": true,
            "writeOnly": false,
            "pattern": "^(#?[a-zA-Z]{4}|[a-zA-Z])$"
          },
          "description": {
            "$ref": "#/definitions/description"
          },
          "operands": {
            "type": "array",
            "description": "Array of ordered operand descriptions.",
            "readOnly": true,
            "writeOnly": false,
            "items": {
              "type": "object",
              "readOnly": true,
              "writeOnly": false,
              "required": ["description"],
              "properties": {
                "description": {
                  "$ref": "#/definitions/description"
                }
              }
            }
          }
        }
      }
    }
  }
}
